<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.meeting_list.MainActivity"
    tools:orientation="horizontal">

    <include layout="@layout/content_filter" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_toolbar"
        android:orientation="horizontal">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/activity_main_meeting_recyclerview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            tools:itemCount="4"
            tools:listitem="@layout/item_meeting" />

        <View
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@android:color/secondary_text_light" />

        <FrameLayout
            android:id="@+id/activity_main_list_detail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            tools:layout="@layout/fragment_detail_meeting" />


    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/activity_main_add_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/ic_add_black_24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>