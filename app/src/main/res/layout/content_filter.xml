<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_filter_view"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@color/cardview_light_background"
    android:elevation="4dp"
    android:orientation="vertical"
    app:layout_constraintBottom_toTopOf="parent">

    <LinearLayout
        android:id="@+id/activity_add_meeting_room_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/shape_spinner">

        <TextView
            android:gravity="center"
            android:id="@+id/content_filter_salle_de_reunion_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:drawableLeft="@drawable/ic_room_24dp"
            android:text="Lieu de réunion :" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/content_filter_room_spinner"
            style="@style/Widget.AppCompat.Spinner.DropDown.ActionBar"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:entries="@array/room_array"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/content_filter_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/content_filter_meeting_date_til"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Réunion après le "
                android:maxLength="35"
                android:windowSoftInputMode="stateHidden" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/content_filter_end_date_til"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:hint="Réunion avant le "
            android:windowSoftInputMode="stateHidden">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="35"
                android:windowSoftInputMode="stateHidden" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
</LinearLayout>