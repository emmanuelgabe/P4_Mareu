<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_filter_view"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="@android:color/white"
    android:elevation="4dp"
    android:orientation="vertical"
    app:layout_constraintBottom_toTopOf="parent">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/content_filter_til_room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:startIconDrawable="@drawable/ic_room_24dp"
        app:endIconMode="clear_text">

        <AutoCompleteTextView
            android:id="@+id/content_filter_actv_room"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:completionHint="Salle de rÃ©union"
            android:completionThreshold="1"
            android:hint="@string/salle_de_reunion" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/content_filter_til_meeting_after_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            app:endIconMode="clear_text">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:hint="@string/reunion_apres_le"
                android:maxLength="35"
                android:windowSoftInputMode="stateHidden" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/content_filte_til_meeting_befor_date"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:hint="@string/reunion_avant_le"
            android:windowSoftInputMode="stateHidden"
            app:endIconMode="clear_text">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:maxLength="35"
                android:windowSoftInputMode="stateHidden" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
</LinearLayout>